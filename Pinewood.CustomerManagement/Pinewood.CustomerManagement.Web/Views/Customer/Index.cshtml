@model IEnumerable<Pinewood.CustomerManagement.Web.Models.CustomerDto>

@{
    ViewBag.Title = "Customer List";
}

<h2>Customer List</h2>

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Create">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>
    @if (Model is not null)
    {
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { customerId = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { customerId = item.Id })
                </td>
            </tr>
        }
    }   

</table>